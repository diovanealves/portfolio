---
import { Image } from "astro:assets";

interface Props {
  index: number;
  imageUrl: string;
  title: string;
  description: string;
  usedLanguages: string[];
  websiteUrl: string;
  githubUrl: string;
}

const {
  index,
  imageUrl,
  title,
  description,
  websiteUrl,
  githubUrl,
  usedLanguages,
} = Astro.props;
---

<div class="flex w-full max-w-md flex-col rounded-b-lg bg-secondary">
  <Image
    src={imageUrl}
    alt={title}
    loading={index < 9 ? "eager" : "lazy"}
    width={450}
    height={450}
    class={"rounded-t-lg w-full h-full"}
  />
  <div class="flex flex-1 flex-col justify-around gap-1 p-3">
    <h1 class="text-lg font-bold leading-relaxed">{title}</h1>
    <p class="h-20 text-base">
      {
        description.length > 100
          ? description.slice(0, 100) + "..."
          : description
      }
    </p>
    <p class="font-medium">
      {usedLanguages}
    </p>
    <div class="flex items-center justify-between">
      <a
        href={websiteUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="cursor-pointer font-medium text-primary transition-colors hover:text-ring"
        >Visitar PÃ¡gina</a
      >
      <a
        href={githubUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="cursor-pointer font-medium text-primary transition-colors hover:text-ring"
        >Ver no GitHub</a
      >
    </div>
  </div>
</div>
